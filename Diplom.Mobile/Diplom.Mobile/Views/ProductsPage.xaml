<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diplom.Mobile.Views.ProductsPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=" Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Spacing="8"  Grid.Column="0" Grid.Row="0" >
            <Label Font="24" Text="Выберите тип блюда" HorizontalOptions="Center" />
            <Picker x:Name="picker"  SelectedIndexChanged="Picker_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Напитки</x:String>
                    <x:String>Угощения</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>


        <StackLayout Grid.Column="0" Grid.Row="1" Margin="20" >
            <StackLayout>
                <ListView x:Name="menuList"
                          HasUnevenRows="False"
                          ItemsSource="{Binding Menus}" 
                          RowHeight="180"
                          ItemTapped="MenuList_ItemTapped">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout Orientation="Horizontal">
                                        <Image Source="{Binding Img}" WidthRequest="90" HeightRequest="110" />
                                        <StackLayout>
                                            <Label Text="{Binding Name}" FontSize="21" />
                                            <Label Text="{Binding ShortDescription}" FontSize="17" />
                                        </StackLayout>
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>