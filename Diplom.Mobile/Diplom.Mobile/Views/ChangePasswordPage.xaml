<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diplom.Mobile.Views.ChangePasswordPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="Center">
                <Label Text="Старый пароль" Margin="0, 5, 0, 0"/>
                <Entry x:Name="passwordEntry"  Placeholder = "Password" IsPassword ="True" />

                <Label Text="Новый пароль" Margin="0, 5, 0, 0"/>
                <Entry x:Name="passworAgaindEntry"  Placeholder = "Confirm password" IsPassword ="True" />
                
                <!--FontSize="Large"-->
                <Button Text="Изменить  пароль" Clicked="Button_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>